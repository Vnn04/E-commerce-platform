    <form action="/login" method="post" class="container mt-5">
      <div class="text-center mb-4">
        <img
          src="img_avatar2.png"
          alt="Avatar"
          class="rounded-circle"
          style="width: 100px"
        />
      </div>

      <div class="mb-3">
        <label for="uname"><b>Email</b></label>
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="Enter email"
          name="email"
          required
        />
      </div>

      <div class="mb-3">
        <label for="psw"><b>Password</b></label>
        <input
          type="password"
          class="form-control"
          id="psw"
          placeholder="Enter Password"
          name="password"
          required
        />
      </div>
      <!-- them boi dungtk04 -->
      <% if(userData.errCode != 0 && userData.errCode != "") {%>
      <div>
        <p><%=JSON.stringify(userData.errMessage).replace(/"/g, "")%></p>
      </div>
      <% } %>

      <div class="mb-3">
        <input type="checkbox" id="remember" name="remember" />
        <label for="remember">Remember me</label>
      </div>

      <button type="submit" class="btn btn-primary">Login</button>

      <div class="mt-3">
        <a href="/register"
          ><button type="button" class="btn btn-secondary">Sign up</button></a
        >
        <span class="ms-3"><a href="/password/reset">Forgot password?</a></span>
      </div>
    </form>

