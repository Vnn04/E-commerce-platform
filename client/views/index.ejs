    <script>
        // Mảng chứa các thẻ phim
        let movies = [];
        <% for(let i = 0; i < 55; i++) { %>
          movies.push({id: '<%=listMovies[i].id%>', title: '<%=listMovies[i].title%>', image: "https://image.tmdb.org/t/p/w1280<%=listMovies[i].poster_path%>"})
