<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <!-- Custom CSS -->
    <style>
      /* Custom styles */
      .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <!-- logo-navbar -->
      <a class="navbar-brand text-success" href="#">F-MOVIE</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- navbar items -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/movie">Movies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/series">Series</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/popular">Popular</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/playlist">My playlists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
        <form class="d-flex">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <!-- profile on navbar -->
        <div class="profile-container ms-3">
          <img
            src="../public/imgs/love.jpg"
            class="rounded-circle profile-picture"
            alt="img empty"
          />
          <div class="profile-text-container">
            <span class="profile-text">Profile</span>
            <i class="fas fa-caret-down ms-2"></i>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-4">
          <!-- User Avatar and Name -->
          <img src="avatar.jpg" alt="Avatar" class="profile-avatar" />
          <h2>User Name</h2>
        </div>
        <div class="col-md-8">
          <!-- Display User Information with Edit Button -->
          <div class="mt-4">
            <div class="mb-3">
              <p>
                <span>Email:</span> <span id="userEmail">a@gmail.com</span>
                <button
                  class="btn btn-link btn-sm edit-btn"
                  data-toggle="modal"
                  data-target="#editEmailModal"
                >
                  Edit
                </button>
              </p>
            </div>
            <div class="mb-3">
              <p>
                <span>Username:</span> <span id="userName">User Name</span>
                <button
                  class="btn btn-link btn-sm edit-btn"
                  data-toggle="modal"
                  data-target="#editUsernameModal"
                >
                  Edit
                </button>
              </p>
            </div>
            <div class="mb-3">
              <p>
                <span>Phone:</span> <span id="userPhone">123-456-7890</span>
                <button
                  class="btn btn-link btn-sm edit-btn"
                  data-toggle="modal"
                  data-target="#editPhoneModal"
                >
                  Edit
                </button>
              </p>
            </div>
            <div class="mb-3">
              <p>Gender:</p>
              <div class="row">
                <div class="col">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="gender"
                      id="maleGender"
                      value="male"
                      checked
                    />
                    <label class="form-check-label" for="maleGender"
                      >Male</label
                    >
                  </div>
                </div>
                <div class="col">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="gender"
                      id="femaleGender"
                      value="female"
                    />
                    <label class="form-check-label" for="femaleGender"
                      >Female</label
                    >
                  </div>
                </div>
                <div class="col">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="gender"
                      id="otherGender"
                      value="other"
                    />
                    <label class="form-check-label" for="otherGender"
                      >Other</label
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <p>
                <span>Birthday:</span>
                <span id="userBirthday">01/01/2000</span>
                <button
                  class="btn btn-link btn-sm edit-btn"
                  data-toggle="modal"
                  data-target="#editBirthdayModal"
                >
                  Edit
                </button>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Email Modal -->
    <div
      class="modal fade"
      id="editEmailModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editEmailModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editEmailModalLabel">Edit Email</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="newEmail">New Email Address</label>
                <input
                  type="email"
                  class="form-control"
                  id="newEmail"
                  placeholder="Enter new email"
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save Changes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Username Modal -->
    <div
      class="modal fade"
      id="editUsernameModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editUsernameModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editUsernameModalLabel">
              Edit Username
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="newUsername">New Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="newUsername"
                  placeholder="Enter new username"
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save Changes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Phone Modal -->
    <div
      class="modal fade"
      id="editPhoneModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editPhoneModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editPhoneModalLabel">Edit Phone</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="newPhone">New Phone Number</label>
                <input
                  type="tel"
                  class="form-control"
                  id="newPhone"
                  placeholder="Enter new phone number"
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save Changes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Gender Modal -->

    <!-- Edit Birthday Modal -->
    <div
      class="modal fade"
      id="editBirthdayModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editBirthdayModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editBirthdayModalLabel">
              Edit Birthday
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="newBirthday">New Birthday</label>
                <input type="date" class="form-control" id="newBirthday" />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary">Save Changes</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
