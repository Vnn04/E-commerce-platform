<!-- Main content -->
<div class="container mt-5">
    <div class="row">
        <!-- Video player -->
        <div class="col-lg-8 col-md-12">
            <div style="position: relative; width: 100%; height: 0; padding-bottom: 67.5%; margin-left: -50px; border-radius: 15px; overflow: hidden;">
                <iframe style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none; object-fit: cover;" src="https://www.youtube.com/embed/<%=videoId%>" allowfullscreen></iframe>
            </div>
        </div>
        <!-- Recommended videos -->
        <div class="col-lg-4 col-md-12">
            <h5>Có thể bạn thích</h5>
            <div class="list-group">

                <% if(moviesRCMDT) {%>
                <% for(let i = 1; i < 7; i++) { %>
                    <% if(moviesRCMDT[i].id != movieId) { %>
                    <article class="w_item_b" id="post-1075699">
                      <a href="/api/movie-detail/<%=moviesRCMDT[i].id%>">
                        <div class="image">
                          <img
                            src="https://image.tmdb.org/t/p/w1280<%=moviesRCMDT[i].poster_path%>"
                            alt="<%=JSON.stringify(moviesRCMDT[i].title)%>"
                            class="mCS_img_loaded"
                          />
                        </div>
                        <div class="data" style="color: white;">
                          <h5 ><%=JSON.stringify(moviesRCMDT[i].title).replace(/"/g, "")%></h5>
                          <div class="wextra">
                            <!-- <b> 8 </b> -->
                            <span class="year"><%=JSON.stringify(moviesRCMDT[i].release_date).replace(/"/g, "")%></span>
                          </div>
                        </div>
                      </a>
                    </article>
                    <% } %>
                    <% } %>
                    <% } %>
            </div>
        </div>
    </div>
</div>

</html>
