<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/style.css" />

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&family=Sen:wght@400;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
    />
    <link href="/imgs/favicon.ico" type="image/x-icon" rel="icon" />

    <title>Movie Film</title>
    <style>
      .img {
        width: 300px;
        height: 400px;
        border: 1px solid #000;
        padding: 10px;
      }
    </style>
  </head>

  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark m-auto p-3">
      <!-- logo-navbar -->
      <a class="navbar-brand text-success" href="#">F-MOVIE</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- navbar items -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/api/get-home-after-login">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/api/movie">Movies</a>
          </li>

          <!-- <li class="nav-item">
                    <a class="nav-link" href="/client/views/auth/login.html">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/client/views/auth/register.html">Register</a>
                </li> -->
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
        <form class="d-flex">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div class="profile-container ms-3 dropdown">
          <a
            href="#"
            class="d-flex align-items-center text-decoration-none"
            id="profileDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="../public/imgs/love.jpg"
              class="rounded-circle profile-picture"
              alt="img empty"
            />
            <div class="profile-text-container ms-2">
              <span class="profile-text">Profile</span>
            </div>
          </a>
        </div>
      </div>
    </nav>

    <div class="container container_movie_detail">
      <!-- Banner đầu trang -->
      <div class="card text-bg-secondary">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="https://image.tmdb.org/t/p/w1280<%=movie.poster_path%>"
              style="width: 300px; height: 400px"
              class="img-fluid img-thumbnail"
              alt="..."
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title">
                <%=JSON.stringify(movie.title).replace(/"/g, "")%>
              </h3>
              <h5>
                <i class="fas fa-star"></i> <%=JSON.stringify(movie.rating)%>
              </h5>
              <ul class="nav">
                <li class="nav-item">
                  <a class="nav-link" href="/add-list/<%=movie.id%>">
                    <i class="fas fa-plus-circle"></i> Add List
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/api/watch-trailer/<%=movie.id%>">
                    <i class="fas fa-play-circle"></i> Play trailer
                  </a>
                </li>
              </ul>
              <h3>Overview</h3>
              <p class="card-text">
                <%=JSON.stringify(movie.overview).replace(/"/g, "")%>
              </p>
              <p class="card-text">
                <small class="text-muted"
                  >Movie published in
                  <%=JSON.stringify(movie.release_date)%></small
                >
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Top billed cast -->

      <div class="row mt-5">
        <h3>Relative Image</h3>
        <% for(var i=0; i < 8; i++) { %>
        <div class="col-md-3">
          <div class="card">
            <img src="images[i].original" class="img" alt="<%=JSON.stringify(movie.title)%>" />
            <!-- <div class="card-body">
              <p class="card-text">
                Some quick example text to build on the card title and make up
                the bulk of the card's content.
              </p>
            </div> -->
          </div>
        </div>
        <% } %>
    </div>
    <div><h2>Recommended movies</h2></div>
    <div class="movie-list-wrapper">
      <div class="row">
    <% for (let i = 0; i < 6; i++) { %>

    <div class="movie-list-item col-md-2 mb-4">
      <div class="card bgw">
          <a href="/api/movie-detail/<%=movieRCM[i].id%>" class=""><img class="card-img-top movie-list-item-img img-r " src="https://image.tmdb.org/t/p/w1280<%=movieRCM[i].poster_path%>" alt="Movie Poster"></a>
          <div class="card-body data">
              <h5 class="card-title movie-list-item-title"><%=JSON.stringify(movieRCM[i].title).replace(/"/g, "")%></h5>
          </div>
      </div>
  </div>
  <% } %>
  </div>
  </div>
    <!-- Footer Section -->
    <footer class="footer mt-5 bg-dark text-white pt-4 pb-4">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <h3>Company</h3>
            <ul class="list-unstyled">
              <li>About Us</li>
              <li>Jobs</li>
              <li>Contact</li>
            </ul>
          </div>
          <div class="col-md-3">
            <h3>Contribute</h3>
            <ul class="list-unstyled">
              <li>Write for us</li>
              <li>Submit your movie</li>
              <li>Partnership</li>
            </ul>
          </div>
          <div class="col-md-3">
            <h3>About</h3>
            <ul class="list-unstyled">
              <li>Privacy Policy</li>
              <li>Terms of Service</li>
              <li>FAQ</li>
            </ul>
          </div>
          <div class="col-md-3">
            <h3>Contact</h3>
            <ul class="list-unstyled">
              <li>Email: contact@flakes.com</li>
              <li>Phone: +1 (123) 456-7890</li>
              <li>Address: 123 Flakes St, Movie City, USA</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <!-- Bootstrap 5 JS và Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  </body>
</html>
