<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link href="/imgs/favicon.ico" type="image/x-icon" rel="icon" />  </head>
    <style>
        .form-group label {
            font-weight: bold;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <h2 class="mb-4">MANAGE</h2>
    
    <!-- Movie Section -->
    <div class="mb-4">
        <h3 class="mb-3">Danh sách phim</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên phim</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Tên phim 1</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2">Sửa</button>
                        <button class="btn btn-danger btn-sm">Xóa</button>
                    </td>
                </tr>
                <!-- Add more rows for other movies -->
            </tbody>
        </table>
    </div>
    
    <!-- Thêm phim Form -->
    <div class="mb-4">
        <h3 class="mb-3">Thêm phim</h3>
        <form action="/add-movie" method="POST">
            <div class="mb-3">
                <label for="movieName" class="form-label">id</label>
                <input type="text" class="form-control" id="movieName" name="id" required>
            </div>
            <div class="mb-3">
                <label for="movieName" class="form-label">Title</label>
                <input type="text" class="form-control" id="movieName" name="title" required>
            </div>
            <div class="mb-3">
                <label for="movieCategory" class="form-label">Thể loại</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Chọn thể loại</option>
                    <option value="1">Hành động</option>
                    <option value="2">Tình cảm</option>
                    <option value="3">Kinh dị</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="releaseYear" class="form-label">Năm phát hành</label>
                <input type="text" class="form-control" id="releaseYear" required>
            </div>
            <button type="submit" class="btn btn-primary">Thêm</button>
        </form>
        <div><%=JSON.stringify(message.errMessage)%></div>
    </div>
    
    <!-- Xóa user -->
    <div>
        <h3 class="mb-3">Danh sách người dùng</h3>
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">User 1
                <div>
                    <button class="btn btn-danger btn-sm me-2">Xóa</button>
                    <button class="btn btn-primary btn-sm">Cấm</button>
                </div>
            </li>
            <!-- Add more users -->
        </ul>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
